{
    "configurations": [
    {
        "name": "Debug React",
        "type": "pwa-node",
        "request": "launch",
        "runtimeExecutable": "npm",
        "runtimeArgs": [
            "run",
            "start"
        ],
        "cwd": "${workspaceFolder}/react-frontend",
        "console": "integratedTerminal",
        "serverReadyAction": {
            "pattern": "Local:.*(https?://localhost:\\d+)",
            "action": "startDebugging",
            "name": "Launch Chrome"
        }
    },
    {
        "name": "Launch Chrome",
        "type": "pwa-chrome",
        "request": "launch",
        "url": "http://localhost:3000",
        "webRoot": "${workspaceFolder}/react-frontend"
    },
    ]
}